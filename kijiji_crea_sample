//crea annuncio kijiji

email=myemaio@gmail.com;
citta=milano;
sub='Cerchi una badante a Torino?'
link='https://www.badante-noproblem.com/badante-torino.html'
fullpost='Per le famiglie (con anziani o disabili) – trova la badante a Torino - Per le badanti – trova lavoro come badante a Torino'

//insert new ad in my favorite category
https://www.kijiji.it/pubblica-annuncio?cat=436338688

//tipo offerta di lavoro
select category-l2 as 436273152
//citta
enter .post-ad-city.required.defaultvisible .text-input as  [clear] 
enter .post-ad-city.required.defaultvisible .text-input as '+citta+'
enter //*[@id="syi-form"]/div[2]/label[1]/input as  '+sub+'
select jobs-offers-type as 15
select jobs-offers-j_type as 2
enter textarea as '+fullpost+'

//tipo azienda
click //*[@id="syi-form"]/div[3]/div/fieldset/label[2]/span
enter email as '+email+'
enter nickname as paolo

//inserire sito
enter attr_url as '+link+'
//click post-ad-preview
click post-ad-publish
wait 3
snap page to kijiji_crea.png
echo 'salva url in annunci: ' url()
write url() to annunci.txt

